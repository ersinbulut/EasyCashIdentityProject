@model LoginViewModel
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/loginform/index.css">
    <title>Easy Cash Identity - Kullanıcı Girişi</title>
</head>
<body>
    <section>
        <div class="form-box">
            <div class="form-value">
                <form action="#" method="post">
                    <h2>Easy Cash Giriş Formu</h2>
                    <div class="inputbox">
                        <ion-icon name="mail-outline"></ion-icon>
                        <input type="text" asp-for="Username" required>
                        <label for="">Kullanıcı Adınız</label>
                    </div>
                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input type="password" asp-for="Password" required>
                        <label for="">Şifreniz</label>
                    </div>
                    <div class="forget">
                        <label for=""><input type="checkbox">Beni Hatırla  <a href="#">Şifremi Unuttum</a></label>

                    </div>
                    <button>Giriş Yap</button>
                    <div class="register">
                        <p>Hesabın Yok mu ?<a href="#">Kayıt Ol</a></p>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>